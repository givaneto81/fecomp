# Chave secreta para a sessão do Flask e geração de tokens
SECRET_KEY="sua_chave_secreta_super_segura_aqui"

# URL de conexão com o banco de dados PostgreSQL
# Formato: postgresql+pg8000://usuario:senha@host:porta/nome_do_banco
DATABASE_URL="postgresql+pg8000://postgres:sua_senha@localhost/educa_ai_db"

# Credenciais para o Login com Google (OAuth 2.0)
GOOGLE_CLIENT_ID="seu_client_id_do_google.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="seu_client_secret_do_google"

# Configurações para o envio de e-mails de verificação com Flask-Mail
# (Exemplo usando Gmail)
MAIL_SERVER="smtp.googlemail.com"
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME="seu_email@gmail.com"
MAIL_PASSWORD="sua_senha_de_app_do_email"

# Chave da API do Google Gemini para a funcionalidade de chat
GEMINI_API_KEY="sua_chave_da_api_do_gemini"

# Ambiente da aplicação ('development' ou 'production')
# Em produção, o modo de depuração será desativado
FLASK_ENV="development"